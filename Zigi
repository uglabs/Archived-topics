        self.session[AGE_GROUP] = classify_age_group(user_input)

        response = AGE_CONFIRMATION
        ssml_ouput = f'<speak><voice name="{VOICE_NAME}">{response}</voice></speak>'
        self.output(Ssml(f"{ssml_ouput}"))

